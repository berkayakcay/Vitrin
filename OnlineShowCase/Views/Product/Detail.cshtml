    <div class="wrap">
        <div class="main">
            <!-- start content -->
            <div class="single">
                <!-- start span1_of_1 -->
                <div class="left_content">
                    <div class="span1_of_1">
                        <!-- start product_slider -->
                        <div class="product-view">
                            <div class="product-essential">
                                @foreach (var photo in Model.Photos.Where(x => x.ItemId == Model.Id))
                                {
                                        <img height="100" width="75" src="~/web/images/@photo.PhotoPath_S" alt="" />
                                }
                            </div>
                        </div>
                        <!-- end product_slider -->
                    </div>
                    <!-- start span1_of_1 -->
                    <div class="span1_of_1_des">
                        <div class="desc1">
                            <h3>@Model.Name</h3>
                            <p>@Model.ItemDescription.SortDescription</p>
                            <h5>@Model.Id - @Model.Brand.Name</h5>
                            <div class="available">
                                <h4>Available Options :</h4>
                                <ul>
                                    <li>
                                        Color:
                                        <select>
                                            @foreach (var itemcolor in Model.ItemVariants.Select(x => x.ItemColor).Distinct())
                                            {
                                                <option>@itemcolor.Name</option>
                                            }
                                        </select>
                                    </li>
                                    <li>
                                        Size:
                                        <select>
                                            @foreach (var itemdim in Model.ItemVariants.Select(x => x.ItemDim).Distinct())
                                            {
                                                <option>@itemdim.Name</option>
                                            }
                                        </select>
                                    </li>
                                </ul>
