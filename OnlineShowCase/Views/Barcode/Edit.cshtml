@model OnlineShowCase.ViewModels.VariantViewModel
    @{
        ViewBag.Title = "Edit";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }

    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Barcode <small>edit page</small></h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                        <ul class="dropdown-menu" role="menu">
                            <li>
                                <a href="#">Settings 1</a>
                            </li>
                            <li>
                                <a href="#">Settings 2</a>
                            </li>
                        </ul>
                    </li>
                    <li>
                        <a class="close-link"><i class="fa fa-close"></i></a>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">

                @using (Html.BeginForm("Edit", "Barcode", FormMethod.Post, htmlAttributes: new { @class = "form-horizontal form-label-left", id="editbarcodes" }))
            {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", htmlAttributes: new { @class = "text-danger" })

                for (int i = 0; i < Model.Barcodes.Count; i++)
                {
                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12">@Model.Barcodes[i].ItemVariant.ItemColor.Name - @Model.Barcodes[i].ItemVariant.ItemDim.Name</label>
                        <div class="col-md-9 col-sm-9 col-xs-12">
                            @Html.HiddenFor(model => Model.Barcodes[i].Id)
                            @Html.HiddenFor(model => Model.Barcodes[i].ItemVariantId)
                            @Html.TextBoxFor(model => Model.Barcodes[i].ItemBarcode , htmlAttributes: new {@class="form-control"})
                        </div>
                    </div>
                }


                    <div class="ln_solid"></div>
                    <div class="form-group">
                        <div class="col-md-9 col-sm-9 col-xs-12 col-md-offset-3">
                            @Html.ActionLink("Cancel", "Index", "Barcode", null, htmlAttributes: new { @class = " btn btn-primary" })
                            <button type="submit" class="btn btn-success">Submit</button>
                            <button type="button" class="btn btn-danger">Clear All</button>
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>
<script>
    $('#clear').click(function () {

        // Selects all elements of type text and clear all
        $('#editbarcodes > input:text:not(".ignore")').val('');
    });
</script>
