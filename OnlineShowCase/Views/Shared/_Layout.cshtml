    @* Modal Dialog Js *@
<script type="text/javascript">
            $(function() {
                $('body')
                    .on('click',
                        '.modal-link',
                        function(e) {
                            e.preventDefault();
                            $(this).attr('data-target', '#modal-container');
                            $(this).attr('data-toggle', 'modal');
                            $(this).attr('data-backdrop', 'static');
                        });

                $('body')
                    .on('click',
                        '.close',
                        function() {
                            $('#modal-container').modal('hide');
                        });

                $('#modal-container')
                    .on('hidden.bs.modal',
                        function() {
                            $(this).removeData('bs.modal');
                        });
            });

</script>

