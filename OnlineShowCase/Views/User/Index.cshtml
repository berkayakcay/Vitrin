@using PagedList
@using PagedList.Mvc
@model IPagedList<OnlineShowCase.Models.User>
@{
    ViewBag.Title = "User";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="col-md-12 col-sm-12 col-xs-12">

    <div class="x_panel">
        <div class="x_title">
            <h2>User <small>create/update/delete</small></h2>
            <ul class="nav navbar-right panel_toolbox">
                <li>
                    <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                </li>
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                    <ul class="dropdown-menu" role="menu">
                        <li>
                            <a href="#">Settings 1</a>
                        </li>
                        <li>
                            <a href="#">Settings 2</a>
                        </li>
                    </ul>
                </li>
                <li>
                    <a class="close-link"><i class="fa fa-close"></i></a>
                </li>
            </ul>
            <div class="clearfix"></div>
        </div>
        <div class="x_content" style="display: block;">
            <a class="modal-link btn btn-app" href="~/Users/User/AddNewUser">
                <i class="fa fa-plus"></i> Add new
            </a>

            <table class="table table-striped table-hover projects">
                <thead>
                    <tr>
                        <th style="width: 1%">#</th>
                        <th>First Last</th>
                        <th>E-mail</th>
                        <th>Status</th>
                        <th style="width: 30%">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row">@item.Id</th>
                            <td>@item.FirstLast</td>
                            <td>@item.Email</td>
                            <td>
                                <button type="button" class="btn btn-success btn-xs">Success</button>
                            </td>
                            <td>
                                <a href="~/User/Detail/@item.Id" class="btn btn-primary btn-xs"><i class="fa fa-folder"></i> View </a>
                                <a href="~/User/Edit/@item.Id" class="btn btn-info btn-xs"><i class="fa fa-pencil"></i> Edit </a>
                                <a href="~/User/Delete/@item.Id" class="btn btn-danger btn-xs"><i class="fa fa-trash-o"></i> Delete </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <div class="clear"></div>
            <div class="ln_solid"></div>

            @Html.PagedListPager(Model, page => Url.Action("Index", new { page }),
           new PagedListRenderOptions()
           {
               Display = PagedListDisplayMode.IfNeeded,
               DisplayPageCountAndCurrentLocation = true
           })

            


        </div>
    </div>

</div>